<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WireBound.ViewModels"
             xmlns:models="clr-namespace:WireBound.Models"
             x:Class="WireBound.Views.ApplicationsPage"
             x:DataType="vm:ApplicationsViewModel"
             BackgroundColor="{StaticResource BackgroundColor}">

    <!-- 
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    WireBound Applications v2.0 - Per-App Analytics
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    -->

    <Grid RowDefinitions="Auto, *">
        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2"
              IsVisible="{Binding IsLoading}"
              BackgroundColor="{StaticResource OverlayColor}"
              ZIndex="100">
            <Border BackgroundColor="{StaticResource CardColor}"
                    StrokeShape="RoundRectangle 16"
                    Padding="32"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <VerticalStackLayout Spacing="16">
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                       Color="{StaticResource PrimaryColor}"
                                       HorizontalOptions="Center" />
                    <Label Text="Loading applications..."
                           Style="{StaticResource SubtitleStyle}"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>
        </Grid>

        <ScrollView Grid.Row="1" Padding="28">
            <VerticalStackLayout Spacing="24">

                <!-- Page Header -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="Applications" 
                           Style="{StaticResource PageTitleStyle}">
                        <Label.Shadow>
                            <Shadow Brush="{StaticResource GlowDownloadColor}" 
                                    Offset="0,0" 
                                    Radius="8" 
                                    Opacity="0.2" />
                        </Label.Shadow>
                    </Label>
                    <Label Text="Per-application network usage tracking"
                           Style="{StaticResource SubtitleStyle}" />
                </VerticalStackLayout>

                <!-- Platform Warning -->
                <Border Style="{StaticResource CardStyle}"
                        BackgroundColor="{StaticResource WarningBannerColor}"
                        IsVisible="{Binding IsPlatformSupported, Converter={StaticResource InverseBoolConverter}}">
                    <HorizontalStackLayout Spacing="16">
                        <Border BackgroundColor="#25FFB627"
                                StrokeShape="RoundRectangle 10"
                                WidthRequest="48"
                                HeightRequest="48">
                            <Label Text="âš ï¸" FontSize="24" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Platform Not Supported"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource WarningColor}" />
                            <Label Text="Per-app network tracking is only available on Windows."
                                   Style="{StaticResource SubtitleStyle}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>

                <!-- Feature Disabled Warning -->
                <Border Style="{StaticResource CardStyle}"
                        BackgroundColor="{StaticResource InfoBannerColor}"
                        IsVisible="{Binding IsPerAppTrackingEnabled, Converter={StaticResource InverseBoolConverter}}">
                    <HorizontalStackLayout Spacing="16">
                        <Border BackgroundColor="#2500E5FF"
                                StrokeShape="RoundRectangle 10"
                                WidthRequest="48"
                                HeightRequest="48">
                            <Label Text="â„¹ï¸" FontSize="24" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Feature Disabled"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryColor}" />
                            <Label Text="Enable Per-App Network Tracking in Settings to use this feature."
                                   Style="{StaticResource SubtitleStyle}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>

                <!-- Elevation Required Warning -->
                <Border Style="{StaticResource CardStyle}"
                        BackgroundColor="{StaticResource WarningBannerColor}"
                        IsVisible="{Binding RequiresElevation}">
                    <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="16">
                        <Border BackgroundColor="#25FFB627"
                                StrokeShape="RoundRectangle 10"
                                WidthRequest="48"
                                HeightRequest="48">
                            <Label Text="ðŸ”’" FontSize="24" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="Administrator Privileges Required"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource WarningColor}" />
                            <Label Text="Per-app network tracking requires elevated privileges to access network connection data."
                                   Style="{StaticResource SubtitleStyle}" />
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="ðŸ›¡ï¸ Run as Administrator"
                                Command="{Binding RequestElevationCommand}"
                                IsEnabled="{Binding IsRequestingElevation, Converter={StaticResource InverseBoolConverter}}"
                                Style="{StaticResource WarningButtonStyle}"
                                Padding="20,12"
                                VerticalOptions="Center" />
                    </Grid>
                </Border>

                <!-- Summary Cards -->
                <Grid ColumnDefinitions="*, *, *" ColumnSpacing="20">
                    <Border Grid.Column="0" Style="{StaticResource ElevatedCardStyle}">
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ“±" FontSize="16" />
                                <Label Text="APPS TRACKED"
                                       Style="{StaticResource MetricLabelStyle}" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding AppCount}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryTextColor}" />
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Column="1" Style="{StaticResource ElevatedCardStyle}">
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="â¬‡ï¸" FontSize="16" />
                                <Label Text="TOTAL DOWNLOAD"
                                       Style="{StaticResource MetricLabelStyle}" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding TotalDownload}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource DownloadColor}">
                                <Label.Shadow>
                                    <Shadow Brush="{StaticResource GlowDownloadColor}" 
                                            Offset="0,0" 
                                            Radius="8" 
                                            Opacity="0.3" />
                                </Label.Shadow>
                            </Label>
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Column="2" Style="{StaticResource ElevatedCardStyle}">
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="â¬†ï¸" FontSize="16" />
                                <Label Text="TOTAL UPLOAD"
                                       Style="{StaticResource MetricLabelStyle}" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding TotalUpload}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource UploadColor}">
                                <Label.Shadow>
                                    <Shadow Brush="{StaticResource GlowUploadColor}" 
                                            Offset="0,0" 
                                            Radius="8" 
                                            Opacity="0.3" />
                                </Label.Shadow>
                            </Label>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Filter Bar -->
                <Border Style="{StaticResource CardStyle}" Padding="20">
                    <Grid ColumnDefinitions="*, Auto, Auto, Auto, Auto" ColumnSpacing="16">
                        <Border BackgroundColor="{StaticResource SurfaceColor}"
                                StrokeShape="RoundRectangle 10"
                                Stroke="{StaticResource GlassBorder}"
                                Padding="12,0">
                            <Entry Placeholder="ðŸ” Search applications..."
                                   Text="{Binding SearchText}"
                                   TextColor="{StaticResource PrimaryTextColor}"
                                   PlaceholderColor="{StaticResource MutedTextColor}"
                                   BackgroundColor="Transparent" />
                        </Border>
                        <DatePicker Grid.Column="1"
                                    Date="{Binding StartDate}"
                                    TextColor="{StaticResource PrimaryTextColor}"
                                    BackgroundColor="{StaticResource SurfaceColor}" />
                        <Label Grid.Column="2"
                               Text="â†’"
                               VerticalOptions="Center"
                               TextColor="{StaticResource MutedTextColor}" />
                        <DatePicker Grid.Column="3"
                                    Date="{Binding EndDate}"
                                    TextColor="{StaticResource PrimaryTextColor}"
                                    BackgroundColor="{StaticResource SurfaceColor}" />
                        <Button Grid.Column="4"
                                Text="ðŸ”„ Refresh"
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="16,10" />
                    </Grid>
                </Border>

                <!-- Active Applications (Real-time) -->
                <VerticalStackLayout Spacing="16"
                                     IsVisible="{Binding IsPerAppTrackingEnabled}">
                    
                    <HorizontalStackLayout Spacing="12">
                        <Border WidthRequest="10" 
                                HeightRequest="10" 
                                StrokeShape="Ellipse"
                                BackgroundColor="{StaticResource SuccessColor}"
                                VerticalOptions="Center">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource GlowSuccessColor}" 
                                        Offset="0,0" 
                                        Radius="4" 
                                        Opacity="0.6" />
                            </Border.Shadow>
                        </Border>
                        <Label Text="ACTIVE APPLICATIONS"
                               Style="{StaticResource MetricLabelStyle}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Border Style="{StaticResource CardStyle}">
                        <CollectionView ItemsSource="{Binding ActiveApps}">
                            <CollectionView.EmptyView>
                                <Label Text="No active applications"
                                       Style="{StaticResource SubtitleStyle}"
                                       HorizontalOptions="Center"
                                       Margin="20" />
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ProcessNetworkStats">
                                    <Border Padding="16" Margin="0,0,0,8"
                                            BackgroundColor="{StaticResource BorderSubtleColor}"
                                            StrokeShape="RoundRectangle 12">
                                        <Grid ColumnDefinitions="Auto, *, Auto, Auto" ColumnSpacing="16">
                                            <Border WidthRequest="44"
                                                    HeightRequest="44"
                                                    BackgroundColor="#1500E5FF"
                                                    StrokeShape="RoundRectangle 10">
                                                <Label Text="ðŸ“±"
                                                       FontSize="20"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center" />
                                            </Border>
                                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                                <Label Text="{Binding DisplayName}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource PrimaryTextColor}" />
                                                <Label Text="{Binding ProcessName}"
                                                       Style="{StaticResource CaptionStyle}" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="2" VerticalOptions="Center" Spacing="2">
                                                <Label Text="â†“ Download"
                                                       Style="{StaticResource CaptionStyle}"
                                                       HorizontalOptions="End" />
                                                <Label Text="{Binding DownloadSpeedBps, StringFormat='{0:N0} B/s'}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource DownloadColor}"
                                                       HorizontalOptions="End" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="3" VerticalOptions="Center" Spacing="2">
                                                <Label Text="â†‘ Upload"
                                                       Style="{StaticResource CaptionStyle}"
                                                       HorizontalOptions="End" />
                                                <Label Text="{Binding UploadSpeedBps, StringFormat='{0:N0} B/s'}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource UploadColor}"
                                                       HorizontalOptions="End" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Border>
                </VerticalStackLayout>

                <!-- Historical Usage -->
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="ðŸ“Š" FontSize="16" VerticalOptions="Center" />
                        <Label Text="HISTORICAL USAGE"
                               Style="{StaticResource MetricLabelStyle}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Border Style="{StaticResource CardStyle}">
                        <CollectionView ItemsSource="{Binding AllApps}">
                            <CollectionView.EmptyView>
                                <Border BackgroundColor="{StaticResource BorderSubtleColor}"
                                        StrokeShape="RoundRectangle 12"
                                        Padding="40"
                                        Margin="0,8">
                                    <VerticalStackLayout HorizontalOptions="Center" Spacing="12">
                                        <Label Text="ðŸ“¦" FontSize="36" HorizontalOptions="Center" />
                                        <Label Text="No application data found"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource PrimaryTextColor}"
                                               HorizontalOptions="Center" />
                                        <Label Text="for the selected date range"
                                               Style="{StaticResource SubtitleStyle}"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>
                                </Border>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:AppUsageRecord">
                                    <Border Padding="16" Margin="0,0,0,8"
                                            BackgroundColor="{StaticResource BorderSubtleColor}"
                                            StrokeShape="RoundRectangle 12">
                                        <Grid ColumnDefinitions="Auto, *, Auto, Auto, Auto" ColumnSpacing="20">
                                            <Border WidthRequest="48"
                                                    HeightRequest="48"
                                                    BackgroundColor="#15A855F7"
                                                    StrokeShape="RoundRectangle 12">
                                                <Label Text="ðŸ“¦"
                                                       FontSize="22"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center" />
                                            </Border>
                                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                                <Label Text="{Binding AppName}"
                                                       FontSize="15"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource PrimaryTextColor}"
                                                       LineBreakMode="TailTruncation" />
                                                <Label Text="{Binding ProcessName}"
                                                       Style="{StaticResource CaptionStyle}" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="End" Spacing="2">
                                                <Label Text="Download"
                                                       Style="{StaticResource CaptionStyle}"
                                                       HorizontalOptions="End" />
                                                <Label Text="{Binding BytesReceived, Converter={StaticResource BytesToStringConverter}}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource DownloadColor}"
                                                       HorizontalOptions="End" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="3" VerticalOptions="Center" HorizontalOptions="End" Spacing="2">
                                                <Label Text="Upload"
                                                       Style="{StaticResource CaptionStyle}"
                                                       HorizontalOptions="End" />
                                                <Label Text="{Binding BytesSent, Converter={StaticResource BytesToStringConverter}}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource UploadColor}"
                                                       HorizontalOptions="End" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="4" VerticalOptions="Center" HorizontalOptions="End" Spacing="2">
                                                <Label Text="Total"
                                                       Style="{StaticResource CaptionStyle}"
                                                       HorizontalOptions="End" />
                                                <Label Text="{Binding TotalBytes, Converter={StaticResource BytesToStringConverter}}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource PrimaryTextColor}"
                                                       HorizontalOptions="End" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Border>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
