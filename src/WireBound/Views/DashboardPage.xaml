<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WireBound.ViewModels"
             x:Class="WireBound.Views.DashboardPage"
             x:DataType="vm:DashboardViewModel"
             BackgroundColor="{StaticResource BackgroundColor}">

    <!-- 
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    WireBound Dashboard v2.0 - "Bento Grid" Layout
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    Modern glassmorphism design with prominent speed displays and clear metrics
    -->

    <Grid RowDefinitions="Auto, *" Padding="28">
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- PAGE HEADER                                                      -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        
        <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,24">
            <VerticalStackLayout Spacing="4">
                <Label Text="Dashboard" 
                       Style="{StaticResource PageTitleStyle}">
                    <Label.Shadow>
                        <Shadow Brush="{StaticResource GlowDownloadColor}" 
                                Offset="0,0" 
                                Radius="8" 
                                Opacity="0.2" />
                    </Label.Shadow>
                </Label>
                <Label Text="Real-time network monitoring"
                       Style="{StaticResource SubtitleStyle}" />
            </VerticalStackLayout>
            
            <!-- Adapter Selector Card -->
            <Border Grid.Column="1"
                    Style="{StaticResource CompactCardStyle}"
                    VerticalOptions="Center"
                    Padding="16,12">
                <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="12">
                    <Border BackgroundColor="{StaticResource PrimaryColor}"
                            StrokeShape="RoundRectangle 8"
                            Stroke="Transparent"
                            WidthRequest="36"
                            HeightRequest="36"
                            VerticalOptions="Center">
                        <Label Text="ðŸŒ"
                               FontSize="18"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="1">
                        <Label Text="Active Adapter"
                               Style="{StaticResource CaptionStyle}" />
                        <Label Text="{Binding SelectedAdapterName}"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryTextColor}"
                               LineBreakMode="TailTruncation"
                               MaximumWidthRequest="160" />
                    </VerticalStackLayout>
                    <Picker Grid.Column="2"
                            ItemsSource="{Binding Adapters}"
                            SelectedItem="{Binding SelectedAdapter}"
                            ItemDisplayBinding="{Binding Name}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            BackgroundColor="{StaticResource SurfaceColor}"
                            WidthRequest="180"
                            VerticalOptions="Center" />
                </Grid>
            </Border>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- MAIN BENTO GRID                                                  -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        
        <Grid Grid.Row="1" 
              RowDefinitions="Auto, Auto, *"
              ColumnDefinitions="*, *"
              RowSpacing="20"
              ColumnSpacing="20">

            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <!-- DOWNLOAD SPEED CARD (Large Hero)                            -->
            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            
            <Border Style="{StaticResource ElevatedCardStyle}">
                <Grid RowDefinitions="Auto, Auto, Auto, Auto" RowSpacing="12">
                    <!-- Header -->
                    <HorizontalStackLayout Spacing="10">
                        <Border BackgroundColor="#1500E5FF"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Transparent"
                                WidthRequest="40"
                                HeightRequest="40">
                            <Label Text="â†“" 
                                   FontSize="24" 
                                   TextColor="{StaticResource DownloadColor}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Download"
                                   Style="{StaticResource CardTitleStyle}" />
                            <Label Text="Current speed"
                                   Style="{StaticResource CaptionStyle}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                    
                    <!-- Speed Value -->
                    <Label Grid.Row="1"
                           Text="{Binding DownloadSpeed}"
                           Style="{StaticResource HeroSpeedStyle}"
                           TextColor="{StaticResource DownloadColor}">
                        <Label.Shadow>
                            <Shadow Brush="{StaticResource GlowDownloadColor}" 
                                    Offset="0,0" 
                                    Radius="12" 
                                    Opacity="0.4" />
                        </Label.Shadow>
                    </Label>
                    
                    <!-- Progress Bar -->
                    <Grid Grid.Row="2" RowDefinitions="Auto, 6" RowSpacing="6">
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Peak performance"
                                   Style="{StaticResource CaptionStyle}" />
                            <Label Grid.Column="1"
                                   Text="{Binding PeakDownloadSpeed}"
                                   Style="{StaticResource CaptionStyle}"
                                   TextColor="{StaticResource DownloadColorDim}" />
                        </Grid>
                        <Border Grid.Row="1" 
                                BackgroundColor="{StaticResource BorderSubtleColor}"
                                StrokeShape="RoundRectangle 3"
                                HeightRequest="6">
                            <Border BackgroundColor="{StaticResource DownloadColor}"
                                    StrokeShape="RoundRectangle 3"
                                    HorizontalOptions="Start"
                                    WidthRequest="120" />
                        </Border>
                    </Grid>
                    
                    <!-- Session Total -->
                    <Grid Grid.Row="3" 
                          ColumnDefinitions="Auto, *"
                          Padding="0,8,0,0">
                        <Border BackgroundColor="{StaticResource SurfaceElevatedColor}"
                                StrokeShape="RoundRectangle 6"
                                Padding="10,6">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="Session:"
                                       Style="{StaticResource CaptionStyle}"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding SessionDownload}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource DownloadColor}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <!-- UPLOAD SPEED CARD (Large Hero)                              -->
            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            
            <Border Grid.Column="1"
                    Style="{StaticResource ElevatedCardStyle}">
                <Grid RowDefinitions="Auto, Auto, Auto, Auto" RowSpacing="12">
                    <!-- Header -->
                    <HorizontalStackLayout Spacing="10">
                        <Border BackgroundColor="#15FF6B35"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Transparent"
                                WidthRequest="40"
                                HeightRequest="40">
                            <Label Text="â†‘" 
                                   FontSize="24" 
                                   TextColor="{StaticResource UploadColor}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Upload"
                                   Style="{StaticResource CardTitleStyle}" />
                            <Label Text="Current speed"
                                   Style="{StaticResource CaptionStyle}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                    
                    <!-- Speed Value -->
                    <Label Grid.Row="1"
                           Text="{Binding UploadSpeed}"
                           Style="{StaticResource HeroSpeedStyle}"
                           TextColor="{StaticResource UploadColor}">
                        <Label.Shadow>
                            <Shadow Brush="{StaticResource GlowUploadColor}" 
                                    Offset="0,0" 
                                    Radius="12" 
                                    Opacity="0.4" />
                        </Label.Shadow>
                    </Label>
                    
                    <!-- Progress Bar -->
                    <Grid Grid.Row="2" RowDefinitions="Auto, 6" RowSpacing="6">
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Peak performance"
                                   Style="{StaticResource CaptionStyle}" />
                            <Label Grid.Column="1"
                                   Text="{Binding PeakUploadSpeed}"
                                   Style="{StaticResource CaptionStyle}"
                                   TextColor="{StaticResource UploadColorDim}" />
                        </Grid>
                        <Border Grid.Row="1" 
                                BackgroundColor="{StaticResource BorderSubtleColor}"
                                StrokeShape="RoundRectangle 3"
                                HeightRequest="6">
                            <Border BackgroundColor="{StaticResource UploadColor}"
                                    StrokeShape="RoundRectangle 3"
                                    HorizontalOptions="Start"
                                    WidthRequest="80" />
                        </Border>
                    </Grid>
                    
                    <!-- Session Total -->
                    <Grid Grid.Row="3" 
                          ColumnDefinitions="Auto, *"
                          Padding="0,8,0,0">
                        <Border BackgroundColor="{StaticResource SurfaceElevatedColor}"
                                StrokeShape="RoundRectangle 6"
                                Padding="10,6">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="Session:"
                                       Style="{StaticResource CaptionStyle}"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding SessionUpload}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource UploadColor}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <!-- SESSION STATS ROW                                           -->
            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            
            <Border Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource CardStyle}">
                <Grid ColumnDefinitions="*, Auto, *, Auto, *, Auto, *" ColumnSpacing="0">
                    
                    <!-- Total Downloaded -->
                    <VerticalStackLayout Spacing="6" VerticalOptions="Center">
                        <Label Text="TOTAL DOWNLOADED"
                               Style="{StaticResource MetricLabelStyle}" />
                        <Label Text="{Binding SessionDownload}"
                               Style="{StaticResource MediumMetricStyle}"
                               TextColor="{StaticResource DownloadColor}" />
                    </VerticalStackLayout>
                    
                    <BoxView Grid.Column="1" Style="{StaticResource VerticalDividerStyle}" Margin="20,0" />
                    
                    <!-- Total Uploaded -->
                    <VerticalStackLayout Grid.Column="2" Spacing="6" VerticalOptions="Center">
                        <Label Text="TOTAL UPLOADED"
                               Style="{StaticResource MetricLabelStyle}" />
                        <Label Text="{Binding SessionUpload}"
                               Style="{StaticResource MediumMetricStyle}"
                               TextColor="{StaticResource UploadColor}" />
                    </VerticalStackLayout>
                    
                    <BoxView Grid.Column="3" Style="{StaticResource VerticalDividerStyle}" Margin="20,0" />
                    
                    <!-- Peak Download -->
                    <VerticalStackLayout Grid.Column="4" Spacing="6" VerticalOptions="Center">
                        <Label Text="PEAK DOWNLOAD"
                               Style="{StaticResource MetricLabelStyle}" />
                        <Label Text="{Binding PeakDownloadSpeed}"
                               Style="{StaticResource MediumMetricStyle}"
                               TextColor="{StaticResource PrimaryTextColor}" />
                    </VerticalStackLayout>
                    
                    <BoxView Grid.Column="5" Style="{StaticResource VerticalDividerStyle}" Margin="20,0" />
                    
                    <!-- Peak Upload -->
                    <VerticalStackLayout Grid.Column="6" Spacing="6" VerticalOptions="Center">
                        <Label Text="PEAK UPLOAD"
                               Style="{StaticResource MetricLabelStyle}" />
                        <Label Text="{Binding PeakUploadSpeed}"
                               Style="{StaticResource MediumMetricStyle}"
                               TextColor="{StaticResource PrimaryTextColor}" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <!-- QUICK ACTIONS / STATUS AREA                                 -->
            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            
            <Border Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource CardStyle}"
                    VerticalOptions="Start">
                <Grid ColumnDefinitions="Auto, *, Auto">
                    
                    <!-- Monitoring Status -->
                    <HorizontalStackLayout Spacing="12">
                        <Border WidthRequest="12" 
                                HeightRequest="12" 
                                StrokeShape="Ellipse"
                                BackgroundColor="{StaticResource SuccessColor}"
                                VerticalOptions="Center">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource GlowSuccessColor}" 
                                        Offset="0,0" 
                                        Radius="8" 
                                        Opacity="0.6" />
                            </Border.Shadow>
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Monitoring Active"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource SuccessColor}" />
                            <Label Text="All network traffic is being tracked"
                                   Style="{StaticResource CaptionStyle}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                    
                    <!-- Quick Actions -->
                    <HorizontalStackLayout Grid.Column="2" Spacing="12">
                        <Button Text="ðŸ“ˆ View Chart"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding NavigateToChartsCommand}" />
                        <Button Text="ðŸ“œ View History"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding NavigateToHistoryCommand}" />
                    </HorizontalStackLayout>
                </Grid>
            </Border>
            
        </Grid>
    </Grid>
</ContentPage>
