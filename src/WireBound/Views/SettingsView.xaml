<UserControl x:Class="WireBound.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8">
            <!-- Header -->
            <TextBlock Text="Settings" Style="{StaticResource HeaderText}" Margin="8,0,0,16"/>

            <!-- General Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="8,0,8,8">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ General" Style="{StaticResource SubHeaderText}" Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Polling Interval" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding PollingIntervals}"
                                  SelectedItem="{Binding PollingIntervalMs}"
                                  Width="150" HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding Mode=OneWay}"/>
                                        <Run Text="ms"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Save Interval" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding SaveIntervals}"
                                  SelectedItem="{Binding SaveIntervalSeconds}"
                                  Width="150" HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding Mode=OneWay}"/>
                                        <Run Text="seconds"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Data Retention" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding DataRetentionDays, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="80"/>
                            <TextBlock Text="days" Style="{StaticResource BodyText}" 
                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Network Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="8,0,8,8">
                <StackPanel>
                    <TextBlock Text="ðŸŒ Network" Style="{StaticResource SubHeaderText}" Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Default Adapter" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Adapters}"
                                  SelectedItem="{Binding SelectedAdapter}"
                                  DisplayMemberPath="Name"
                                  Width="300" HorizontalAlignment="Left"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <CheckBox Content="Use IP Helper API (fallback method)" 
                                  IsChecked="{Binding UseIpHelperApi}"/>
                        <Button Content="Test" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding TestIpHelperApiCommand}"
                                Margin="16,0,0,0"
                                Padding="12,4"/>
                    </StackPanel>
                    
                    <TextBlock Style="{StaticResource BodyText}" TextWrapping="Wrap" Margin="0,0,0,0">
                        <Run Text="Note:"/>
                        <Run Text="Enable IP Helper API if you experience incorrect readings with the standard method. This uses the native Windows API directly."/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Appearance Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="8,0,8,8">
                <StackPanel>
                    <TextBlock Text="ðŸŽ¨ Appearance" Style="{StaticResource SubHeaderText}" Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Theme" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Themes}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  Width="150" HorizontalAlignment="Left"/>
                    </Grid>

                    <CheckBox Content="Minimize to system tray" 
                              IsChecked="{Binding MinimizeToTray}"
                              Margin="0,0,0,8"/>
                    
                    <CheckBox Content="Start with Windows" 
                              IsChecked="{Binding StartWithWindows}"/>
                </StackPanel>
            </Border>

            <!-- Per-App Network Tracking -->
            <Border Style="{StaticResource CardStyle}" Margin="8,0,8,8">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Per-App Network Tracking" Style="{StaticResource SubHeaderText}" Margin="0,0,0,16"/>
                    
                    <CheckBox Content="Enable per-application network tracking" 
                              IsChecked="{Binding IsPerAppTrackingEnabled}"
                              Margin="0,0,0,8"/>
                    
                    <TextBlock Style="{StaticResource BodyText}" TextWrapping="Wrap" Margin="0,0,0,16" Opacity="0.7">
                        <Run Text="Note:"/>
                        <Run Text="Per-app tracking requires elevated privileges (Run as Administrator) to monitor individual application network usage."/>
                    </TextBlock>

                    <Grid Margin="0,0,0,12" IsEnabled="{Binding IsPerAppTrackingEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="App Data Retention" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding AppDataRetentionDays, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="80"/>
                            <TextBlock Text="days (0 = indefinite, max 365)" Style="{StaticResource BodyText}" 
                                       VerticalAlignment="Center" Margin="8,0,0,0" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,0" IsEnabled="{Binding IsPerAppTrackingEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Aggregate After" Style="{StaticResource BodyText}" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding AppDataAggregateAfterDays, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="80"/>
                            <TextBlock Text="days (1-30, default 7)" Style="{StaticResource BodyText}" 
                                       VerticalAlignment="Center" Margin="8,0,0,0" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Data Management -->
            <Border Style="{StaticResource CardStyle}" Margin="8,0,8,8">
                <StackPanel>
                    <TextBlock Text="ðŸ—„ï¸ Data Management" Style="{StaticResource SubHeaderText}" Margin="0,0,0,16"/>
                    
                    <Button Content="ðŸ§¹ Clean Up Old Data" 
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding CleanupDataCommand}"
                            HorizontalAlignment="Left"/>
                    
                    <TextBlock Style="{StaticResource BodyText}" Margin="0,8,0,0">
                        <Run Text="Removes data older than the retention period."/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Save Button -->
            <Border Margin="8,8,8,16">
                <StackPanel>
                    <Button Content="ðŸ’¾ Save Settings" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding SaveSettingsCommand}"
                            HorizontalAlignment="Left"
                            Width="150"/>
                    
                    <TextBlock Text="{Binding StatusMessage}" 
                               Style="{StaticResource BodyText}"
                               Foreground="{StaticResource SuccessBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
