<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Dark Theme Colors (Default) -->
    <Color x:Key="PrimaryColor">#1E90FF</Color>
    <Color x:Key="SecondaryColor">#32CD32</Color>
    <Color x:Key="BackgroundColor">#1A1A2E</Color>
    <Color x:Key="SidebarColor">#16213E</Color>
    <Color x:Key="CardColor">#0F3460</Color>
    <Color x:Key="CardHoverColor">#1A4A80</Color>
    
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#A0A0A0</Color>
    
    <Color x:Key="DownloadColor">#1E90FF</Color>
    <Color x:Key="UploadColor">#32CD32</Color>
    <Color x:Key="SuccessColor">#32CD32</Color>
    <Color x:Key="WarningColor">#FFA500</Color>
    <Color x:Key="ErrorColor">#FF4444</Color>
    
    <Color x:Key="ButtonBackgroundColor">#1E90FF</Color>
    <Color x:Key="ButtonHoverColor">#4AA3FF</Color>
    <Color x:Key="SecondaryButtonBackgroundColor">#2A2A4A</Color>
    <Color x:Key="SecondaryButtonHoverColor">#3A3A5A</Color>
    
    <Color x:Key="BorderColor">#333366</Color>

</ResourceDictionary>
