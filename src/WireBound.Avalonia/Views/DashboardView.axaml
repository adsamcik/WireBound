<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:WireBound.Avalonia.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             x:Class="WireBound.Avalonia.Views.DashboardView"
             x:DataType="vm:DashboardViewModel"
             Background="{DynamicResource BackgroundBrush}"
             AutomationProperties.Name="Dashboard View">

    <Grid RowDefinitions="Auto, *" Margin="28">
        
        <!-- PAGE HEADER -->
        <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,24">
            <StackPanel Spacing="4">
                <TextBlock Text="Dashboard" Classes="PageTitle" />
                <TextBlock Text="Real-time network monitoring" Classes="Subtitle" />
            </StackPanel>
            
            <!-- Adapter Selector -->
            <Border Grid.Column="1" Classes="CompactCard" VerticalAlignment="Center" Padding="16,12">
                <Grid ColumnDefinitions="Auto, *, Auto, Auto">
                    <Border Background="{DynamicResource PrimaryBrush}"
                            Margin="0,0,12,0"
                            CornerRadius="8"
                            Width="36" Height="36"
                            VerticalAlignment="Center">
                        <TextBlock Text="ðŸŒ" FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="1">
                        <TextBlock Text="Active Adapter" Classes="Caption" />
                        <TextBlock Text="{Binding SelectedAdapterName}"
                                   FontSize="13" FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextBrush}" />
                    </StackPanel>
                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding Adapters}"
                              SelectedItem="{Binding SelectedAdapter}"
                              Width="220"
                              VerticalAlignment="Center"
                              Margin="12,0,0,0"
                              AutomationProperties.Name="Network Adapter Selection"
                              AutomationProperties.HelpText="Select which network adapter to monitor">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ToggleButton Grid.Column="3"
                                  IsChecked="{Binding ShowAdvancedAdapters}"
                                  ToolTip.Tip="Show VM and container adapters (Hyper-V, Docker, WSL)"
                                  Margin="8,0,0,0"
                                  Padding="8,6"
                                  VerticalAlignment="Center"
                                  AutomationProperties.Name="Show Advanced Adapters"
                                  AutomationProperties.HelpText="Toggle visibility of virtual machine and container network adapters">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="âš™ï¸" FontSize="14" />
                            <TextBlock Text="All" FontSize="12" 
                                       IsVisible="{Binding ShowAdvancedAdapters}" />
                        </StackPanel>
                    </ToggleButton>
                </Grid>
            </Border>
        </Grid>

        <!-- SCROLLABLE CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto"
              ColumnDefinitions="*, *">

            <!-- DOWNLOAD SPEED CARD - Clean Hero Design -->
            <Border Classes="ElevatedCard" Margin="0,0,10,0">
                <Grid RowDefinitions="Auto, Auto, Auto">
                    <!-- Header Row -->
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#1500E5FF" CornerRadius="6" Width="28" Height="28">
                                <TextBlock Text="â†“" FontSize="16" 
                                           Foreground="{DynamicResource DownloadBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                            <TextBlock Text="Download" Classes="CardTitle" VerticalAlignment="Center" />
                        </StackPanel>
                        <!-- Peak in header, right-aligned -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                            <TextBlock Text="Peak:" Classes="Caption" Opacity="0.6" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding PeakDownloadSpeed}"
                                       FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource DownloadColorDim}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                    
                    <!-- Hero Speed Display -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,16,0,16">
                        <TextBlock Text="{Binding DownloadSpeed}"
                                   FontSize="48" FontWeight="Bold"
                                   Foreground="{DynamicResource DownloadBrush}"
                                   HorizontalAlignment="Center"
                                   MinWidth="200"
                                   TextAlignment="Center" />
                        <!-- Trend indicator -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4" Margin="0,4,0,0">
                            <TextBlock Text="{Binding DownloadTrendIcon}"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding DownloadTrendText}"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Footer Stats -->
                    <Border Grid.Row="2" 
                            Background="{DynamicResource BorderSubtleBrush}"
                            CornerRadius="6"
                            Padding="12,8">
                        <Grid ColumnDefinitions="*, Auto, *">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="Today" Classes="Caption" Opacity="0.7" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding TodayDownload}"
                                           FontSize="13" FontWeight="Bold"
                                           Foreground="{DynamicResource DownloadBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <Border Grid.Column="1" Width="1" Background="{DynamicResource MutedTextBrush}" Opacity="0.3" Margin="8,2" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" HorizontalAlignment="Right">
                                <TextBlock Text="Session" Classes="Caption" Opacity="0.7" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding SessionDownload}"
                                           FontSize="13" FontWeight="Bold"
                                           Foreground="{DynamicResource DownloadBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- UPLOAD SPEED CARD - Clean Hero Design -->
            <Border Grid.Column="1" Classes="ElevatedCard" Margin="10,0,0,0">
                <Grid RowDefinitions="Auto, Auto, Auto">
                    <!-- Header Row -->
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#15FF6B35" CornerRadius="6" Width="28" Height="28">
                                <TextBlock Text="â†‘" FontSize="16" 
                                           Foreground="{DynamicResource UploadBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                            <TextBlock Text="Upload" Classes="CardTitle" VerticalAlignment="Center" />
                        </StackPanel>
                        <!-- Peak in header, right-aligned -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                            <TextBlock Text="Peak:" Classes="Caption" Opacity="0.6" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding PeakUploadSpeed}"
                                       FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource UploadColorDim}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                    
                    <!-- Hero Speed Display -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,16,0,16">
                        <TextBlock Text="{Binding UploadSpeed}"
                                   FontSize="48" FontWeight="Bold"
                                   Foreground="{DynamicResource UploadBrush}"
                                   HorizontalAlignment="Center"
                                   MinWidth="200"
                                   TextAlignment="Center" />
                        <!-- Trend indicator -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4" Margin="0,4,0,0">
                            <TextBlock Text="{Binding UploadTrendIcon}"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding UploadTrendText}"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Footer Stats -->
                    <Border Grid.Row="2" 
                            Background="{DynamicResource BorderSubtleBrush}"
                            CornerRadius="6"
                            Padding="12,8">
                        <Grid ColumnDefinitions="*, Auto, *">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="Today" Classes="Caption" Opacity="0.7" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding TodayUpload}"
                                           FontSize="13" FontWeight="Bold"
                                           Foreground="{DynamicResource UploadBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <Border Grid.Column="1" Width="1" Background="{DynamicResource MutedTextBrush}" Opacity="0.3" Margin="8,2" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" HorizontalAlignment="Right">
                                <TextBlock Text="Session" Classes="Caption" Opacity="0.7" VerticalAlignment="Center" />
                                <TextBlock Text="{Binding SessionUpload}"
                                           FontSize="13" FontWeight="Bold"
                                           Foreground="{DynamicResource UploadBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
            <!-- VPN TRAFFIC PANEL (shown when VPN is connected) -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" 
                    Classes="CompactCard" 
                    Margin="0,20,0,0"
                    IsVisible="{Binding IsVpnConnected}">
                <Grid ColumnDefinitions="Auto, Auto, *, Auto, Auto">
                    <!-- VPN Icon and Name -->
                    <Border Background="#15A855F7" CornerRadius="8" Width="36" Height="36"
                            VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”" FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock Text="VPN Traffic" 
                                   FontSize="14" FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextBrush}" />
                        <TextBlock Text="{Binding ActiveVpnNames}" 
                                   Classes="Caption"
                                   MaxWidth="200"
                                   TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                    
                    <!-- VPN Traffic Stats -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="â†“" FontSize="16" 
                                       Foreground="{DynamicResource DownloadBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding VpnDownloadSpeed}" 
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="{DynamicResource DownloadBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="â†‘" FontSize="16" 
                                       Foreground="{DynamicResource UploadBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding VpnUploadSpeed}" 
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="{DynamicResource UploadBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Session totals -->
                    <Border Grid.Column="4" 
                            Background="{DynamicResource SurfaceElevatedColor}"
                            CornerRadius="6"
                            Padding="12,6"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="â†“" Classes="Caption" Foreground="{DynamicResource DownloadBrush}" />
                                <TextBlock Text="{Binding VpnSessionDownload}" 
                                           FontSize="12" FontWeight="Bold"
                                           Foreground="{DynamicResource DownloadBrush}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="â†‘" Classes="Caption" Foreground="{DynamicResource UploadBrush}" />
                                <TextBlock Text="{Binding VpnSessionUpload}" 
                                           FontSize="12" FontWeight="Bold"
                                           Foreground="{DynamicResource UploadBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- QUICK ACTIONS -->
            <Border Grid.Row="2" Grid.ColumnSpan="2" Classes="Card" VerticalAlignment="Top" Margin="0,20,0,0">
                <Grid ColumnDefinitions="Auto, *, Auto">
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Ellipse Width="12" Height="12"
                                 Fill="{DynamicResource SuccessBrush}"
                                 VerticalAlignment="Center" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Monitoring Active"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{DynamicResource SuccessBrush}" />
                            <TextBlock Text="All network traffic is being tracked" Classes="Caption" />
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                        <Button Content="ðŸ“ˆ View Chart"
                                Classes="Secondary"
                                Command="{Binding NavigateToChartsCommand}"
                                AutomationProperties.Name="View Chart"
                                AutomationProperties.HelpText="Navigate to the live chart view" />
                        <Button Content="ðŸ“œ View History"
                                Classes="Secondary"
                                Command="{Binding NavigateToHistoryCommand}"
                                AutomationProperties.Name="View History"
                                AutomationProperties.HelpText="Navigate to the history view" />
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- ADAPTER DASHBOARD -->
            <Border Grid.Row="3" Grid.ColumnSpan="2" 
                    Classes="Card" 
                    VerticalAlignment="Top" 
                    Margin="0,20,0,0"
                    IsVisible="{Binding ShowAdapterDashboard}">
                <StackPanel Spacing="16">
                    <!-- Section Header -->
                    <Grid ColumnDefinitions="*, Auto">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ”Œ" FontSize="18" VerticalAlignment="Center" />
                            <TextBlock Text="Network Adapters" 
                                       FontSize="16" FontWeight="Bold" 
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding AdapterDisplayItems.Count, StringFormat='({0})'}"
                                       Classes="Caption"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                        <ToggleButton Grid.Column="1"
                                      IsChecked="{Binding ShowAdapterDashboard}"
                                      ToolTip.Tip="Toggle adapter dashboard"
                                      Padding="8,4"
                                      AutomationProperties.Name="Toggle Adapter Dashboard"
                                      AutomationProperties.HelpText="Show or hide the network adapters list">
                            <TextBlock Text="â–¼" FontSize="10" />
                        </ToggleButton>
                    </Grid>
                    
                    <!-- Adapter List -->
                    <ItemsControl ItemsSource="{Binding AdapterDisplayItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceElevatedColor}"
                                        CornerRadius="8"
                                        Padding="12,10"
                                        Margin="0,0,0,8">
                                    <Grid ColumnDefinitions="Auto, *, Auto, Auto">
                                        <!-- Type Icon -->
                                        <Border Background="{DynamicResource PrimaryBrush}"
                                                CornerRadius="6"
                                                Width="32" Height="32"
                                                Opacity="0.15"
                                                VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding TypeIcon}" 
                                                   FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                        
                                        <!-- Name and Status -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding DisplayName}" 
                                                           FontSize="14" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource PrimaryTextBrush}" />
                                                <!-- Badge -->
                                                <Border IsVisible="{Binding Badge, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                                        Background="{Binding BadgeColor}"
                                                        CornerRadius="4"
                                                        Padding="6,2"
                                                        Opacity="0.9">
                                                    <TextBlock Text="{Binding Badge}" 
                                                               FontSize="10" FontWeight="Bold"
                                                               Foreground="White" />
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding StatusLine}" 
                                                       Classes="Caption"
                                                       Opacity="0.7" />
                                        </StackPanel>
                                        
                                        <!-- Traffic Stats -->
                                        <StackPanel Grid.Column="2" 
                                                    Orientation="Horizontal" 
                                                    Spacing="20"
                                                    Margin="20,0"
                                                    VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="â†“" FontSize="14" 
                                                           Foreground="{DynamicResource DownloadBrush}"
                                                           VerticalAlignment="Center" />
                                                <TextBlock Text="{Binding DownloadSpeed}" 
                                                           FontSize="13" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource DownloadBrush}"
                                                           MinWidth="70"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="â†‘" FontSize="14" 
                                                           Foreground="{DynamicResource UploadBrush}"
                                                           VerticalAlignment="Center" />
                                                <TextBlock Text="{Binding UploadSpeed}" 
                                                           FontSize="13" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource UploadBrush}"
                                                           MinWidth="70"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Today's Totals (compact) -->
                                        <Border Grid.Column="3"
                                                Background="{DynamicResource BorderSubtleBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Spacing="12">
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock Text="â†“" FontSize="10" Foreground="{DynamicResource DownloadBrush}" />
                                                    <TextBlock Text="{Binding TodayDownload}" 
                                                               FontSize="11"
                                                               Foreground="{DynamicResource DownloadBrush}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock Text="â†‘" FontSize="10" Foreground="{DynamicResource UploadBrush}" />
                                                    <TextBlock Text="{Binding TodayUpload}" 
                                                               FontSize="11"
                                                               Foreground="{DynamicResource UploadBrush}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
