<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:WireBound.Avalonia.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             x:Class="WireBound.Avalonia.Views.DashboardView"
             x:DataType="vm:DashboardViewModel"
             Background="{DynamicResource BackgroundBrush}">

    <Grid RowDefinitions="Auto, *" Margin="28">
        
        <!-- PAGE HEADER -->
        <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,24">
            <StackPanel Spacing="4">
                <TextBlock Text="Dashboard" Classes="PageTitle" />
                <TextBlock Text="Real-time network monitoring" Classes="Subtitle" />
            </StackPanel>
            
            <!-- Adapter Selector -->
            <Border Grid.Column="1" Classes="CompactCard" VerticalAlignment="Center" Padding="16,12">
                <Grid ColumnDefinitions="Auto, *, Auto, Auto">
                    <Border Background="{DynamicResource PrimaryBrush}"
                            Margin="0,0,12,0"
                            CornerRadius="8"
                            Width="36" Height="36"
                            VerticalAlignment="Center">
                        <TextBlock Text="ðŸŒ" FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="1">
                        <TextBlock Text="Active Adapter" Classes="Caption" />
                        <TextBlock Text="{Binding SelectedAdapterName}"
                                   FontSize="13" FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryTextBrush}" />
                    </StackPanel>
                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding Adapters}"
                              SelectedItem="{Binding SelectedAdapter}"
                              Width="220"
                              VerticalAlignment="Center"
                              Margin="12,0,0,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ToggleButton Grid.Column="3"
                                  IsChecked="{Binding ShowAdvancedAdapters}"
                                  ToolTip.Tip="Show VM and container adapters (Hyper-V, Docker, WSL)"
                                  Margin="8,0,0,0"
                                  Padding="8,6"
                                  VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="âš™ï¸" FontSize="14" />
                            <TextBlock Text="All" FontSize="12" 
                                       IsVisible="{Binding ShowAdvancedAdapters}" />
                        </StackPanel>
                    </ToggleButton>
                </Grid>
            </Border>
        </Grid>

        <!-- MAIN CONTENT GRID -->
        <Grid Grid.Row="1" 
              RowDefinitions="Auto, Auto, Auto, *"
              ColumnDefinitions="*, *">

            <!-- DOWNLOAD SPEED CARD -->
            <Border Classes="ElevatedCard" Margin="0,0,10,0">
                <Grid RowDefinitions="Auto, Auto, Auto, Auto">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Border Background="#1500E5FF" CornerRadius="8" Width="40" Height="40">
                            <TextBlock Text="â†“" FontSize="24" 
                                       Foreground="{DynamicResource DownloadBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Download" Classes="CardTitle" />
                            <TextBlock Text="Current speed" Classes="Caption" />
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="1"
                               Text="{Binding DownloadSpeed}"
                               Classes="HeroSpeed"
                               Foreground="{DynamicResource DownloadBrush}"
                               Margin="0,12,0,0" />
                    
                    <Grid Grid.Row="2" RowDefinitions="Auto, 6" Margin="0,12,0,0">
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock Text="Peak performance" Classes="Caption" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding PeakDownloadSpeed}"
                                       Classes="Caption"
                                       Foreground="{DynamicResource DownloadColorDim}" />
                        </Grid>
                        <Border Grid.Row="1" 
                                Background="{DynamicResource BorderSubtleBrush}"
                                CornerRadius="3"
                                Height="6"
                                Margin="0,6,0,0">
                            <Border Background="{DynamicResource DownloadBrush}"
                                    CornerRadius="3"
                                    HorizontalAlignment="Left"
                                    Width="120" />
                        </Border>
                    </Grid>
                    
                    <Border Grid.Row="3" 
                            Background="{DynamicResource SurfaceElevatedColor}"
                            CornerRadius="6"
                            Padding="10,6"
                            HorizontalAlignment="Left"
                            Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Session:" Classes="Caption" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding SessionDownload}"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{DynamicResource DownloadBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- UPLOAD SPEED CARD -->
            <Border Grid.Column="1" Classes="ElevatedCard" Margin="10,0,0,0">
                <Grid RowDefinitions="Auto, Auto, Auto, Auto">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Border Background="#15FF6B35" CornerRadius="8" Width="40" Height="40">
                            <TextBlock Text="â†‘" FontSize="24" 
                                       Foreground="{DynamicResource UploadBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Upload" Classes="CardTitle" />
                            <TextBlock Text="Current speed" Classes="Caption" />
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="1"
                               Text="{Binding UploadSpeed}"
                               Classes="HeroSpeed"
                               Foreground="{DynamicResource UploadBrush}"
                               Margin="0,12,0,0" />
                    
                    <Grid Grid.Row="2" RowDefinitions="Auto, 6" Margin="0,12,0,0">
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock Text="Peak performance" Classes="Caption" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding PeakUploadSpeed}"
                                       Classes="Caption"
                                       Foreground="{DynamicResource UploadColorDim}" />
                        </Grid>
                        <Border Grid.Row="1" 
                                Background="{DynamicResource BorderSubtleBrush}"
                                CornerRadius="3"
                                Height="6"
                                Margin="0,6,0,0">
                            <Border Background="{DynamicResource UploadBrush}"
                                    CornerRadius="3"
                                    HorizontalAlignment="Left"
                                    Width="80" />
                        </Border>
                    </Grid>
                    
                    <Border Grid.Row="3" 
                            Background="{DynamicResource SurfaceElevatedColor}"
                            CornerRadius="6"
                            Padding="10,6"
                            HorizontalAlignment="Left"
                            Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Session:" Classes="Caption" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding SessionUpload}"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{DynamicResource UploadBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- SESSION STATS ROW -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" Classes="Card" Margin="0,20,0,0">
                <Grid ColumnDefinitions="*, Auto, *, Auto, *, Auto, *">
                    
                    <StackPanel Spacing="6" VerticalAlignment="Center">
                        <TextBlock Text="TOTAL DOWNLOADED" Classes="MetricLabel" />
                        <TextBlock Text="{Binding SessionDownload}" Classes="MediumMetric"
                                   Foreground="{DynamicResource DownloadBrush}" />
                    </StackPanel>
                    
                    <Rectangle Grid.Column="1" Classes="VerticalDivider" Margin="20,0" />
                    
                    <StackPanel Grid.Column="2" Spacing="6" VerticalAlignment="Center">
                        <TextBlock Text="TOTAL UPLOADED" Classes="MetricLabel" />
                        <TextBlock Text="{Binding SessionUpload}" Classes="MediumMetric"
                                   Foreground="{DynamicResource UploadBrush}" />
                    </StackPanel>
                    
                    <Rectangle Grid.Column="3" Classes="VerticalDivider" Margin="20,0" />
                    
                    <StackPanel Grid.Column="4" Spacing="6" VerticalAlignment="Center">
                        <TextBlock Text="PEAK DOWNLOAD" Classes="MetricLabel" />
                        <TextBlock Text="{Binding PeakDownloadSpeed}" Classes="MediumMetric" />
                    </StackPanel>
                    
                    <Rectangle Grid.Column="5" Classes="VerticalDivider" Margin="20,0" />
                    
                    <StackPanel Grid.Column="6" Spacing="6" VerticalAlignment="Center">
                        <TextBlock Text="PEAK UPLOAD" Classes="MetricLabel" />
                        <TextBlock Text="{Binding PeakUploadSpeed}" Classes="MediumMetric" />
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- VPN TRAFFIC ANALYSIS PANEL (shown when VPN is connected) -->
            <Border Grid.Row="2" Grid.ColumnSpan="2" 
                    Classes="Card" 
                    Margin="0,20,0,0"
                    IsVisible="{Binding IsVpnConnected}">
                <Grid RowDefinitions="Auto, Auto">
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,16">
                        <Border Background="#15A855F7" CornerRadius="8" Width="36" Height="36">
                            <TextBlock Text="ðŸ”" FontSize="18"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="VPN Traffic Analysis" 
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryTextBrush}" />
                            <TextBlock Text="{Binding ActiveVpnNames}" 
                                       Classes="Caption"
                                       MaxWidth="400"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Traffic breakdown grid -->
                    <Grid Grid.Row="1" ColumnDefinitions="*, Auto, *, Auto, *">
                        
                        <!-- Actual (VPN Tunnel) Traffic -->
                        <StackPanel Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="ACTUAL (PAYLOAD)" Classes="MetricLabel" />
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <StackPanel>
                                    <TextBlock Text="â†“" FontSize="12" 
                                               Foreground="{DynamicResource DownloadBrush}" />
                                    <TextBlock Text="{Binding VpnDownloadSpeed}" 
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="{DynamicResource DownloadBrush}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="â†‘" FontSize="12" 
                                               Foreground="{DynamicResource UploadBrush}" />
                                    <TextBlock Text="{Binding VpnUploadSpeed}" 
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="{DynamicResource UploadBrush}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <Rectangle Grid.Column="1" Classes="VerticalDivider" Margin="20,0" />
                        
                        <!-- Total (Physical) Traffic -->
                        <StackPanel Grid.Column="2" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="TOTAL (WIRE)" Classes="MetricLabel" />
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <StackPanel>
                                    <TextBlock Text="â†“" FontSize="12" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                    <TextBlock Text="{Binding PhysicalDownloadSpeed}" 
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="â†‘" FontSize="12" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                    <TextBlock Text="{Binding PhysicalUploadSpeed}" 
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <Rectangle Grid.Column="3" Classes="VerticalDivider" Margin="20,0" />
                        
                        <!-- VPN Overhead -->
                        <StackPanel Grid.Column="4" Spacing="6" VerticalAlignment="Center">
                            <TextBlock Text="VPN OVERHEAD" Classes="MetricLabel" />
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <StackPanel>
                                    <TextBlock Text="â†“" FontSize="12" 
                                               Foreground="{DynamicResource WarningBrush}" />
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="{Binding VpnDownloadOverhead}" 
                                                   FontSize="16" FontWeight="Bold"
                                                   Foreground="{DynamicResource WarningBrush}" />
                                        <TextBlock Text="{Binding VpnDownloadOverheadPercent}" 
                                                   FontSize="11"
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,0,0,2"
                                                   Foreground="{DynamicResource SecondaryTextBrush}" />
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="â†‘" FontSize="12" 
                                               Foreground="{DynamicResource WarningBrush}" />
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="{Binding VpnUploadOverhead}" 
                                                   FontSize="16" FontWeight="Bold"
                                                   Foreground="{DynamicResource WarningBrush}" />
                                        <TextBlock Text="{Binding VpnUploadOverheadPercent}" 
                                                   FontSize="11"
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,0,0,2"
                                                   Foreground="{DynamicResource SecondaryTextBrush}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- QUICK ACTIONS -->
            <Border Grid.Row="3" Grid.ColumnSpan="2" Classes="Card" VerticalAlignment="Top" Margin="0,20,0,0">
                <Grid ColumnDefinitions="Auto, *, Auto">
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Ellipse Width="12" Height="12"
                                 Fill="{DynamicResource SuccessBrush}"
                                 VerticalAlignment="Center" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Monitoring Active"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="{DynamicResource SuccessBrush}" />
                            <TextBlock Text="All network traffic is being tracked" Classes="Caption" />
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                        <Button Content="ðŸ“ˆ View Chart"
                                Classes="Secondary"
                                Command="{Binding NavigateToChartsCommand}" />
                        <Button Content="ðŸ“œ View History"
                                Classes="Secondary"
                                Command="{Binding NavigateToHistoryCommand}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
