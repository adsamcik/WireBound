    <FlyoutItem Title="ðŸ“Š  Dashboard" Route="Dashboard">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="ðŸ“ˆ  Live Chart" Route="Charts">
        <ShellContent ContentTemplate="{DataTemplate views:ChartsPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="ðŸ“±  Applications" Route="Applications">
        <ShellContent ContentTemplate="{DataTemplate views:ApplicationsPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="ðŸ“œ  History" Route="History">
        <ShellContent ContentTemplate="{DataTemplate views:HistoryPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="âš™ï¸  Settings" Route="Settings">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
    </FlyoutItem>

</Shell>
