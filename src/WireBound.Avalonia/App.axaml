<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:WireBound.Avalonia.Converters"
             x:Class="WireBound.Avalonia.App"
             RequestedThemeVariant="Dark">
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://WireBound/Styles/Styles.axaml" />
    </Application.Styles>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://WireBound/Styles/Colors.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:SpeedUnitConverter x:Key="SpeedUnitConverter" />
            <converters:InsightsPeriodConverter x:Key="InsightsPeriodConverter" />
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
