<UserControl x:Class="WireBound.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:viewmodels="clr-namespace:WireBound.ViewModels"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8">
            <!-- Header -->
            <TextBlock Text="Dashboard" Style="{StaticResource HeaderText}" Margin="8,0,0,16"/>

            <!-- Adapter Selection -->
            <Border Style="{StaticResource CardStyle}" Margin="8,0,8,8">
                <StackPanel>
                    <TextBlock Text="Network Adapter" Style="{StaticResource SubHeaderText}" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Adapters}"
                              SelectedItem="{Binding SelectedAdapter}"
                              DisplayMemberPath="Name"
                              Width="300"
                              HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Speed Cards -->
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Download Speed -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="â¬‡ï¸" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Download Speed" Style="{StaticResource SubHeaderText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding DownloadSpeed}" 
                                   Style="{StaticResource LargeValueText}"
                                   Foreground="{StaticResource DownloadBrush}"/>
                        <TextBlock Text="Current download rate" 
                                   Style="{StaticResource BodyText}" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Upload Speed -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="â¬†ï¸" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Upload Speed" Style="{StaticResource SubHeaderText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding UploadSpeed}" 
                                   Style="{StaticResource LargeValueText}"
                                   Foreground="{StaticResource UploadBrush}"/>
                        <TextBlock Text="Current upload rate" 
                                   Style="{StaticResource BodyText}" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Session Stats -->
            <Grid Margin="0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Session Download -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¥ Session Downloaded" Style="{StaticResource SubHeaderText}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding SessionDownload}" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Since app started" 
                                   Style="{StaticResource BodyText}" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Session Upload -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¤ Session Uploaded" Style="{StaticResource SubHeaderText}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding SessionUpload}" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Since app started" 
                                   Style="{StaticResource BodyText}" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Top Applications Card -->
            <Border Style="{StaticResource CardStyle}" 
                    Margin="8,8,8,8"
                    Visibility="{Binding IsPerAppTrackingEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="ðŸ”¥ Top Applications" Style="{StaticResource SubHeaderText}" Margin="0,0,0,12"/>
                    
                    <!-- Fallback text when no apps -->
                    <TextBlock Text="No active applications"
                               Style="{StaticResource BodyText}"
                               Opacity="0.6"
                               HorizontalAlignment="Center"
                               Margin="0,8"
                               Visibility="{Binding TopApps.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=0}"/>
                    
                    <!-- Top Apps List -->
                    <ItemsControl ItemsSource="{Binding TopApps}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}" 
                                        CornerRadius="6" 
                                        Padding="12,8" 
                                        Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- App Icon -->
                                        <Image Grid.Column="0" 
                                               Source="{Binding Icon}" 
                                               Width="24" 
                                               Height="24" 
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>
                                        
                                        <!-- App Name -->
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding DisplayName}" 
                                                   Style="{StaticResource BodyText}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- Download Speed -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0" VerticalAlignment="Center">
                                            <TextBlock Text="â¬‡" Foreground="{StaticResource DownloadBrush}" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding DownloadSpeedBps, Converter={StaticResource SpeedToStringConverter}}" 
                                                       Foreground="{StaticResource DownloadBrush}"
                                                       MinWidth="80"/>
                                        </StackPanel>
                                        
                                        <!-- Upload Speed -->
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="â¬†" Foreground="{StaticResource UploadBrush}" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding UploadSpeedBps, Converter={StaticResource SpeedToStringConverter}}" 
                                                       Foreground="{StaticResource UploadBrush}"
                                                       MinWidth="80"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Real-time Speed Chart -->
            <Border Style="{StaticResource CardStyle}" Margin="8,8,8,8">
                <StackPanel>
                    <!-- Chart Header with Controls -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ðŸ“Š Real-time Speed" Style="{StaticResource SubHeaderText}" VerticalAlignment="Center"/>

                        <!-- Time Range Selector -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Time Range:" 
                                       Style="{StaticResource BodyText}" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            
                            <!-- Time Range Toggle Buttons -->
                            <Border Background="{StaticResource SurfaceBrush}" 
                                    CornerRadius="4" 
                                    Padding="2">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="30s" 
                                                 GroupName="TimeRange"
                                                 IsChecked="{Binding SelectedTimeRange.Label, Converter={StaticResource StringEqualsBoolConverter}, ConverterParameter=30s, Mode=OneWay}"
                                                 Command="{Binding SelectTimeRangeCommand}"
                                                 CommandParameter="30s"
                                                 Style="{StaticResource TimeRangeToggleButton}"/>
                                    <RadioButton Content="1m" 
                                                 GroupName="TimeRange"
                                                 IsChecked="{Binding SelectedTimeRange.Label, Converter={StaticResource StringEqualsBoolConverter}, ConverterParameter=1m, Mode=OneWay}"
                                                 Command="{Binding SelectTimeRangeCommand}"
                                                 CommandParameter="1m"
                                                 Style="{StaticResource TimeRangeToggleButton}"/>
                                    <RadioButton Content="5m" 
                                                 GroupName="TimeRange"
                                                 IsChecked="{Binding SelectedTimeRange.Label, Converter={StaticResource StringEqualsBoolConverter}, ConverterParameter=5m, Mode=OneWay}"
                                                 Command="{Binding SelectTimeRangeCommand}"
                                                 CommandParameter="5m"
                                                 Style="{StaticResource TimeRangeToggleButton}"/>
                                    <RadioButton Content="15m" 
                                                 GroupName="TimeRange"
                                                 IsChecked="{Binding SelectedTimeRange.Label, Converter={StaticResource StringEqualsBoolConverter}, ConverterParameter=15m, Mode=OneWay}"
                                                 Command="{Binding SelectTimeRangeCommand}"
                                                 CommandParameter="15m"
                                                 Style="{StaticResource TimeRangeToggleButton}"/>
                                    <RadioButton Content="1h" 
                                                 GroupName="TimeRange"
                                                 IsChecked="{Binding SelectedTimeRange.Label, Converter={StaticResource StringEqualsBoolConverter}, ConverterParameter=1h, Mode=OneWay}"
                                                 Command="{Binding SelectTimeRangeCommand}"
                                                 CommandParameter="1h"
                                                 Style="{StaticResource TimeRangeToggleButton}"/>
                                </StackPanel>
                            </Border>

                            <!-- Chart Controls -->
                            <Button Content="ðŸ”„" 
                                    ToolTip="Reset Zoom"
                                    Command="{Binding ResetZoomCommand}"
                                    Style="{StaticResource ChartControlButton}"
                                    Margin="8,0,0,0"/>
                            <ToggleButton Content="{Binding IsAutoScaleEnabled, Converter={StaticResource AutoScaleIconConverter}}"
                                          IsChecked="{Binding IsAutoScaleEnabled}"
                                          ToolTip="{Binding IsAutoScaleEnabled, Converter={StaticResource AutoScaleTooltipConverter}}"
                                          Command="{Binding ToggleAutoScaleCommand}"
                                          Style="{StaticResource ChartControlToggleButton}"
                                          Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Chart Statistics -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Peak Download -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Peak â¬‡" Style="{StaticResource BodyText}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding PeakDownloadSpeed}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DownloadBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Avg Download -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Avg â¬‡" Style="{StaticResource BodyText}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AverageDownloadSpeed}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource DownloadBrush}"
                                       HorizontalAlignment="Center"
                                       Opacity="0.8"/>
                        </StackPanel>

                        <!-- Peak Upload -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Peak â¬†" Style="{StaticResource BodyText}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding PeakUploadSpeed}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource UploadBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Avg Upload -->
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="Avg â¬†" Style="{StaticResource BodyText}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AverageUploadSpeed}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource UploadBrush}"
                                       HorizontalAlignment="Center"
                                       Opacity="0.8"/>
                        </StackPanel>
                    </Grid>

                    <!-- Interactive Chart -->
                    <lvc:CartesianChart Series="{Binding SpeedSeries}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}"
                                        Height="300"
                                        ZoomMode="X"
                                        TooltipPosition="Top">
                    </lvc:CartesianChart>

                    <!-- Chart Legend -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                            <Border Background="#1E90FF" Width="12" Height="12" CornerRadius="2" Margin="0,0,6,0"/>
                            <TextBlock Text="Download" Style="{StaticResource BodyText}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#32CD32" Width="12" Height="12" CornerRadius="2" Margin="0,0,6,0"/>
                            <TextBlock Text="Upload" Style="{StaticResource BodyText}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Interaction Hint -->
                    <TextBlock Text="ðŸ’¡ Scroll to zoom â€¢ Drag to pan â€¢ Use time range buttons to change view"
                               Style="{StaticResource BodyText}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"
                               Opacity="0.6"
                               FontSize="11"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
