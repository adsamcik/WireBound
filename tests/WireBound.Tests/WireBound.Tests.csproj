<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0-windows</TargetFramework>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>

    <!-- TUnit configuration -->
    <OutputType>Exe</OutputType>
    <EnableMSTestRunner>false</EnableMSTestRunner>
  </PropertyGroup>

  <ItemGroup>
    <!-- TUnit - Modern async-first testing framework -->
    <PackageReference Include="TUnit" Version="0.4.62" />
    
    <!-- Mocking library -->
    <PackageReference Include="NSubstitute" Version="5.3.0" />
    
    <!-- EF Core InMemory for database testing -->
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" Version="10.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\WireBound\WireBound.csproj" />
  </ItemGroup>

</Project>
