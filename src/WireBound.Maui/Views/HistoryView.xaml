<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WireBound.Maui.ViewModels"
             x:Class="WireBound.Maui.Views.HistoryView"
             x:DataType="vm:HistoryViewModel">

    <Grid RowDefinitions="Auto, *" Padding="24" RowSpacing="20">
        
        <!-- Header -->
        <VerticalStackLayout Spacing="4">
            <Label Text="History" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryTextColor}" />
            <Label Text="Network usage over time"
                   FontSize="14"
                   TextColor="{StaticResource SecondaryTextColor}" />
        </VerticalStackLayout>

        <!-- Daily Usage List -->
        <Border Grid.Row="1"
                BackgroundColor="{StaticResource CardColor}"
                StrokeShape="RoundRectangle 12"
                Stroke="Transparent"
                Padding="16">
            <Grid RowDefinitions="Auto, *">
                <!-- Table Header -->
                <Grid ColumnDefinitions="*, *, *, *" Padding="12,8">
                    <Label Text="Date" 
                           FontSize="12" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource SecondaryTextColor}" />
                    <Label Grid.Column="1" 
                           Text="Downloaded" 
                           FontSize="12" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource SecondaryTextColor}" />
                    <Label Grid.Column="2" 
                           Text="Uploaded" 
                           FontSize="12" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource SecondaryTextColor}" />
                    <Label Grid.Column="3" 
                           Text="Total" 
                           FontSize="12" 
                           FontAttributes="Bold"
                           TextColor="{StaticResource SecondaryTextColor}" />
                </Grid>
                
                <!-- Data -->
                <CollectionView Grid.Row="1" 
                                ItemsSource="{Binding DailyUsages}"
                                SelectionMode="None">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" 
                                            VerticalOptions="Center"
                                            Padding="40">
                            <Label Text="ðŸ“Š" FontSize="48" HorizontalOptions="Center" />
                            <Label Text="No history data yet"
                                   FontSize="16"
                                   TextColor="{StaticResource SecondaryTextColor}"
                                   HorizontalOptions="Center" />
                            <Label Text="Data will appear after monitoring runs for a while"
                                   FontSize="12"
                                   TextColor="{StaticResource SecondaryTextColor}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:DailyUsageItem">
                            <Border BackgroundColor="Transparent"
                                    StrokeThickness="0"
                                    Padding="12,10">
                                <Grid ColumnDefinitions="*, *, *, *">
                                    <Label Text="{Binding DateFormatted}"
                                           FontSize="14"
                                           TextColor="{StaticResource PrimaryTextColor}" />
                                    <Label Grid.Column="1"
                                           Text="{Binding DownloadFormatted}"
                                           FontSize="14"
                                           TextColor="#1E90FF" />
                                    <Label Grid.Column="2"
                                           Text="{Binding UploadFormatted}"
                                           FontSize="14"
                                           TextColor="#32CD32" />
                                    <Label Grid.Column="3"
                                           Text="{Binding TotalFormatted}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource PrimaryTextColor}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>
    </Grid>
</ContentView>
