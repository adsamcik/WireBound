<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WireBound.Maui.ViewModels"
             x:Class="WireBound.Maui.Views.DashboardPage"
             x:DataType="vm:DashboardViewModel"
             Title="Dashboard"
             Shell.NavBarIsVisible="True"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView Padding="24">
        <VerticalStackLayout Spacing="24">
            
            <!-- Page Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="Dashboard" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryTextColor}" />
                <Label Text="Real-time network monitoring"
                       FontSize="14"
                       TextColor="{StaticResource SecondaryTextColor}" />
            </VerticalStackLayout>

            <!-- Selected Adapter Display -->
            <Border Style="{StaticResource CardStyle}">
                <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="12">
                    <Border BackgroundColor="{StaticResource PrimaryColor}"
                            StrokeShape="RoundRectangle 8"
                            Stroke="Transparent"
                            WidthRequest="44"
                            HeightRequest="44"
                            VerticalOptions="Center">
                        <Label Text="ðŸŒ"
                               FontSize="22"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Border>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                        <Label Text="Active Adapter"
                               FontSize="12"
                               TextColor="{StaticResource SecondaryTextColor}" />
                        <Label Text="{Binding SelectedAdapterName}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource PrimaryTextColor}" />
                    </VerticalStackLayout>
                    <Picker Grid.Column="2"
                            ItemsSource="{Binding Adapters}"
                            SelectedItem="{Binding SelectedAdapter}"
                            ItemDisplayBinding="{Binding Name}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            BackgroundColor="{StaticResource SidebarColor}"
                            WidthRequest="180"
                            VerticalOptions="Center" />
                </Grid>
            </Border>

            <!-- Real-time Speed Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="CURRENT SPEED"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{StaticResource SecondaryTextColor}"
                       CharacterSpacing="1" />
                
                <Grid ColumnDefinitions="*, *" ColumnSpacing="16">
                    <!-- Download Speed Card -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <Grid RowDefinitions="Auto, Auto, Auto" RowSpacing="8">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="â†“"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource DownloadColor}" />
                                <Label Text="Download" 
                                       FontSize="16"
                                       VerticalOptions="Center"
                                       TextColor="{StaticResource SecondaryTextColor}" />
                            </HorizontalStackLayout>
                            <Label Grid.Row="1"
                                   Text="{Binding DownloadSpeed}" 
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource DownloadColor}" />
                            <BoxView Grid.Row="2"
                                     HeightRequest="4"
                                     CornerRadius="2"
                                     Color="{StaticResource DownloadColor}"
                                     Opacity="0.3"
                                     HorizontalOptions="Fill" />
                        </Grid>
                    </Border>

                    <!-- Upload Speed Card -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <Grid RowDefinitions="Auto, Auto, Auto" RowSpacing="8">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="â†‘"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource UploadColor}" />
                                <Label Text="Upload" 
                                       FontSize="16"
                                       VerticalOptions="Center"
                                       TextColor="{StaticResource SecondaryTextColor}" />
                            </HorizontalStackLayout>
                            <Label Grid.Row="1"
                                   Text="{Binding UploadSpeed}" 
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource UploadColor}" />
                            <BoxView Grid.Row="2"
                                     HeightRequest="4"
                                     CornerRadius="2"
                                     Color="{StaticResource UploadColor}"
                                     Opacity="0.3"
                                     HorizontalOptions="Fill" />
                        </Grid>
                    </Border>
                </Grid>
            </VerticalStackLayout>

            <!-- Session Usage Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="SESSION USAGE"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{StaticResource SecondaryTextColor}"
                       CharacterSpacing="1" />
                
                <Border Style="{StaticResource CardStyle}">
                    <Grid ColumnDefinitions="*, Auto, *" RowDefinitions="Auto, Auto" 
                          ColumnSpacing="20" RowSpacing="16">
                        
                        <!-- Download Usage -->
                        <VerticalStackLayout Grid.Column="0" Spacing="6">
                            <HorizontalStackLayout Spacing="6">
                                <Label Text="â†“"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource DownloadColor}" />
                                <Label Text="Downloaded"
                                       FontSize="14"
                                       TextColor="{StaticResource SecondaryTextColor}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding SessionDownload}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryTextColor}" />
                        </VerticalStackLayout>

                        <!-- Divider -->
                        <BoxView Grid.Column="1"
                                 Grid.RowSpan="2"
                                 WidthRequest="1"
                                 Color="{StaticResource BorderColor}"
                                 VerticalOptions="Fill" />

                        <!-- Upload Usage -->
                        <VerticalStackLayout Grid.Column="2" Spacing="6">
                            <HorizontalStackLayout Spacing="6">
                                <Label Text="â†‘"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource UploadColor}" />
                                <Label Text="Uploaded"
                                       FontSize="14"
                                       TextColor="{StaticResource SecondaryTextColor}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding SessionUpload}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryTextColor}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- Status Indicator -->
            <Border Style="{StaticResource CardStyle}" Padding="16">
                <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Border BackgroundColor="{StaticResource SuccessColor}"
                            StrokeShape="RoundRectangle 6"
                            Stroke="Transparent"
                            WidthRequest="12"
                            HeightRequest="12"
                            VerticalOptions="Center" />
                    <Label Text="Monitoring Active"
                           FontSize="14"
                           TextColor="{StaticResource SuccessColor}"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
